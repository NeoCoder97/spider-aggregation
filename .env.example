# MindWeaver Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# Database Configuration (DB_ prefix)
# =============================================================================

# Database type: sqlite, postgresql, mysql
# Default: sqlite
# DB_TYPE=sqlite

# --- SQLite Configuration ---
# Path to SQLite database file (relative to project root)
# DB_PATH=data/spider_aggregation.db

# --- PostgreSQL Configuration ---
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_DATABASE=mindweaver
# DB_USER=mindweaver
# DB_PASSWORD=changeme
# DB_SSL_MODE=prefer  # disable, allow, prefer, require, verify-ca, verify-full

# --- MySQL Configuration ---
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=mindweaver
# DB_USER=mindweaver
# DB_PASSWORD=changeme
# DB_SSL_MODE=preferred  # disabled, preferred, required, verify_ca, verify_identity

# --- Common Database Settings ---
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_ECHO=false  # Set to true to log SQL queries

# =============================================================================
# Application Configuration (MIND_ prefix)
# =============================================================================

# MIND_DEBUG=false
# MIND_VERBOSE=false

# =============================================================================
# Scheduler Configuration (SCHEDULER_ prefix)
# =============================================================================

# SCHEDULER_ENABLED=true
# SCHEDULER_TIMEZONE=Asia/Shanghai
# SCHEDULER_DEFAULT_INTERVAL_MINUTES=60
# SCHEDULER_MIN_INTERVAL_MINUTES=10
# SCHEDULER_MAX_WORKERS=3

# =============================================================================
# Web API Configuration (WEB_ prefix)
# =============================================================================

# WEB_ENABLED=true
# WEB_HOST=127.0.0.1
# WEB_PORT=8000

# =============================================================================
# Logging Configuration (LOG_ prefix)
# =============================================================================

# LOG_LEVEL=INFO
# LOG_FILE_ENABLED=true
# LOG_FILE_PATH=logs/spider_aggregation.log
